<project name="SafetyChecker" basedir="." default="compile">
	<target name="clean">
		<echo> clean </echo>
		<delete dir="bin"/>
	</target>

	<target name="compile" depends="clean">
		<echo> Compile </echo>
		<mkdir dir="bin"/>
		<javac classpath="./bin:./lib/*" srcdir="src" destdir="bin" >
			<include name="**/*.java"/>
		</javac>
	</target>

</project>

